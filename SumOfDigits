#include<stdio.h>  
 
 int main(){    

int n,sum,m;  
sum = 0;  
printf("Enter a number:");    
scanf("%d",&n);    

while(n > 0){    
    m = n % 10;    
    sum = sum + m;    
    n = n / 10;    
    }    

printf("\nSum is=%d",sum);  
printf("\n\nThanks for trying out my code :), have a nice day");
return 0;  
}   
