#include <stdio.h>

int main()
{
  int yr;
 
  printf("\nPlease Enter any number you wish \n");
  scanf("%d", &yr);
  printf("Year you chose = %d\n", yr);
 
  
  if (( yr%400 == 0)|| (( yr%4 == 0 ) &&( yr%100 != 0)))
      printf("\nYear %d is a Leap. \n", yr);
  else
      printf("\nYear %d is not. \n", yr);
  
   
   return 0;
}
