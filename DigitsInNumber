#include <stdio.h>

int main()
{
  int Number, Count;
  Count = 0;

  printf("\nPlease Enter any number\n");
  scanf("%d", &Number);

  while(Number > 0)
  {
     Number = Number / 10;
     Count = Count + 1;  
  }

  printf("\nNumber of Digits in a Given Number = %d", Count);
  printf("\nThanks for visiting and have a nice day :)");
  return 0;
}
