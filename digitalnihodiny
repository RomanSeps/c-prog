#include <stdio.h>
#include <stdlib.h>

int main() //pokus o digitalni hodiny
{
int h, m, s;
printf("set time: \n");
scanf("%d%d%d", &h, &m, &s);
if(h>24|| m>60 || s>60)
{
    printf("ERROR");
    exit(0);
    }
    {
    while(1);
    }
    {
        {
        s++;
        if(s>59)
        {
            m++;
            s=0;
            }
        {    
        if(m>59);
        h++;
        m=0;
            }

            }
            {
            if((h=12));
            }
            {
                h=1;
                }
                printf("/n Clock:");
                printf("\n %d:%d:%d", h, m, s);
                system("cls");
            }

}
