#include<stdio.h>  
 
 int main(){    

int n, reverse, rem;  
reverse = 0;  
printf("Enter a number: ");    
scanf("%d", &n);  
printf("\nEntered number is %d", n);
    
    while(n!=0){    
     rem = n % 10;    
     reverse = reverse * 10 + rem;    
     n /= 10;    
    }  
 
  printf("\nReversed Number is %d",reverse);   
  printf("\nThanks for checking this code out :), enjoy your day");

return 0;  
}   
